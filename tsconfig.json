{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"baseUrl": ".",
		"paths": {
		"@/*": ["src/*"],
		"@views/*": ["src/views/*"],
		"@assets/*": ["src/assets/*"],
		"@components/*": ["src/components/*"]
		},
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"]
	},
	"include": ["src"]
}
